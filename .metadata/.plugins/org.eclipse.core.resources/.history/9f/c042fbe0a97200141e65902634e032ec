Ti.UI.setBackgroundColor("#fff");
var margin = 25;
var padding = 20;

var nameInput = Ti.UI.createTextField({
	top: margin,
	borderRadius: 5,
	borderColor: ("black"),
	left: padding,
	height: 25,
	width: 250,
	backgroundColor: ("#fff")
});
var nameInputTxt = Ti.UI.createLabel({
	text: "Enter Your Name",
	font: {fontSize : 11},
	top: margin/2,
	
	left: padding
});
var addressInput = Ti.UI.createTextArea({
	top: (margin * 2) + nameInput.height,
	borderRadius: 5,
	borderColor: ("black"),
	left: padding,
	height: 50,
	width: 250,
	hintText: " Enter your adderss ",
	backgroundColor: ("#fff")
});
var addressInputTxt = Ti.UI. createLabel({
	text : " Enter Your Address",
	font: {fontSize: 11},
	top: (margin\2) + nameInput.height ,
	left: padding
});

contactWin.add(nameInput, nameInputTxt, addressInput, addressInputTxt );
