Ti.UI.setBackgroundColor("000");
var padding = 30,

var winMain = Ti.UI.createWindow({
	backgroundColor: "#fff" 
	
	
});

var viewOne = Ti.UI.createView({
	backgroundColor: "green",
	borderRadius: 10,
	borderWidth: 2,
	width: 325,
	height: 100,
	top: padding
	});
var viewTwo = Ti.UI.createView({
	backgroundColor: "red",
	borderRadius: 10,
	borderWidth: 2,
	width: 300,
	height: 100,
	height:padding + viewOne.height + 20 	
});	
winMain.add(viewOne);
winMain.open();

