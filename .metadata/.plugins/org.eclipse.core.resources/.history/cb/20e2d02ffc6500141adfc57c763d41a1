Ti.UI.setBackgroundColor("#fff");


// Var for windows one and two
var title = Ti.UI.createView({
	backgroundColor:  "#fff",
	height: 50,
	top: 5
	});
	
var border = Ti.UI.createView({
	backgroundColor:"#999",
	height: 1,
	top: title.height + title.top + 5
	});
	
var titleLabel = Ti.UI.createLabel({
	text: "I am the Title",
	font: {fontSize: 35, fontFamily: "hevetical", fontWeigth: "bold"},
	top: 15,
	});
	
var winOne = Ti.UI.createWindow({
	backgroundColor: "#fff" 	
});

var winTwo = Ti.UI.createWindow({
	backgroundColor: "#999" 	
});

// main code 
winOne.add(title, border);
	title.add(titleLabel);

winOne.open();
