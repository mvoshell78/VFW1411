Ti.UI.setBackgroundColor("000");
var padding = 30

var winMain = Ti.UI.createWindow({
	backgroundColor: "#222" 	
});

var viewOne = Ti.UI.createView({
	backgroundColor: "red",
	borderRadius: 10,
	borderWidth: 2,
	width: 300,
	height: 100,
	top: padding
	});
var viewTwo = Ti.UI.createView({
	backgroundColor: "green",
	borderRadius: 10,
	borderWidth: 2,
	width: 325,
	height: 100,
	top: padding + viewOne.height + padding 	
});	
var useless = Ti.UI.createLabel({
	text: "Useless Facts",
	color: backgroundColor,
	font: {fontSize: 30, fontFamily: "ArialRounded"},
	
	
});
winMain.add(viewOne, viewTwo);
	viewOne.add(useless);

winMain.open();

