Ti.UI.setBackgroundColor("#fff");

var winOne = Ti.UI.createWindow({
	background: "#fff",
	});

var openLabel = Ti.UI.createView({
	backgroundColor: "#F7ECF9",
	border: 1,
	borderRadius: 10,
	width:300,
	top: 300,
	height: 35
	
});


openLabel.addEventListener("click", galleryOpen);

var galleryOpen = function() {
  
  var winTwo = Ti.UI.createWindow({
	background: "#red"
	});
	winTwo.open();
};

var openTxt = Ti.UI.createLabel({
	text: "Click to open image gallery"
});
winOne.open(openLabel);
	winOne.add(openLabel);
	openLabel.add(openTxt);
