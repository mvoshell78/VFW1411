Ti.UI.setBackgroundColor("#fff");
var margin = 15;
var padding = 20;

var nameInput = Ti.UI.createTextField({
	top: margin,
	borderRadius: 5,
	borderColor: ("black"),
	left: padding,
	height: 25,
	width: 250,
	hintText: " Enter Your Name",
	backgroundColor: ("#fff")
});

var addressInput = Ti.UI.createTextArea({
	top: margin,
	borderRadius: 5,
	borderColor: ("black"),
	left: padding,
	height: 50,
	width: 250,
	hintText: " Enter a valid mailing adderss ",
	backgroundColor: ("#fff")
});

contactWin.add(nameInput,addressInput );
